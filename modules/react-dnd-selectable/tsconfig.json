{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "jsx": "react",
        "lib": [
            "es7",
            "dom"
        ],
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "src",
        "isolatedModules": false,
        "noEmit": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}